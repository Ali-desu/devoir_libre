<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.devoir_libre.controllers.TransactionController">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <!-- Source Account ID -->
    <Label text="Source Account ID:"/>
    <TextField fx:id="sourceAccountIdField" promptText="Enter source account ID"/>

    <!-- Destination Account ID -->
    <Label text="Destination Account ID:"/>
    <TextField fx:id="destinationAccountIdField" promptText="Enter destination account ID"/>

    <!-- Transaction Amount -->
    <Label text="Amount:"/>
    <TextField fx:id="amountField" promptText="Enter transaction amount"/>

    <!-- Submit Button -->
    <Button text="Submit Transaction" onAction="#handleTransaction"/>

    <!-- Result Label -->
    <Label fx:id="resultLabel" textFill="red"/>
</VBox>
