<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.devoir_libre.controllers.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Welcome!"/>

    <!-- Button to open the client creation form -->
    <Button fx:id="btnScene1" text="Create New Client" onAction="#openClientForm"/>
    <Button fx:id="btnScene2" text="Create New account" onAction="#openAccountForm"/>
</VBox>
